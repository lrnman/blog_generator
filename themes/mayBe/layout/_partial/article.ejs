
<!-- Post -->
 
<section class="post read-post">
  <%- post.scripts ? js(post.scripts) : '' %>
	<header class="major">
		<span class="date"><%- post.date.format(theme.date_format)%></span>
		<h1 id="title"><%- post.title || theme.unnamed %></h1>
	</header>
    <%if(post.photos && post.photos.length){ %>
	<%- partial('_partial/gallery', {photos: post.photos, row: post.row}) %>
	<%	} %>

    <% if(post.pimages && post.pimages.length){ %>
    <%- partial('_partial/pimages', {photos: post.pimages, col: post.col}) %>
    <%	} %>

    <%- post.content %>

	<% if (post.tags && post.tags.length) { %>
	<!-- 标签云 -->
	<div id='tag_cloud' class="tags">
		<i class="title fa fa-tag "></i>
		<% post.tags.map(function(tag){  %>
		<a href="/tags/#<%= tag.name %>" title="<%= tag.name %>" rel="<%= tag.length %>"><%= tag.name %></a>
		<% }) %>
	</div>
	<% } %>
</section>

<%- partial('_post/nav') %>

<% if (post.toc) { %>
<%- partial('_post/toc', {content: post.content}) %>
<% } %>